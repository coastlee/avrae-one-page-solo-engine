embed <drac2>
input_str,verbose="&*&".lower() if "&*&" else "",False
if '-v' in input_str:
	verbose=True
data=load_json(get_gvar("c832d064-3c85-41a1-95fd-d06f0f56757f"))
gm_moves_data = data[11]
pacing_roll = vroll("1d6")
pacing_total = pacing_roll.total
pacing_move = gm_moves_data["pacing_moves"][f"{pacing_total}"]

return_string = f"# GM Moves: Pacing\n{gm_moves_data.description}\n### Pacing Move 🚶‍♂️\n*What Now?*\n> **__{pacing_move}__**\n\n\* *Add `-v` to see the rols and table images*"
verbose_string = ""
if verbose:
	verbose_string = f"# GM Moves: Pacing\n{gm_moves_data.description}\n### Pacing Move 🚶‍♂️\n*What Now?*\n> **{pacing_move}**\n## Rolls\n**Pacing Move Roll:** {pacing_roll.full}"
footer = "|| !oracle pacing || by coastlee"
</drac2>
-desc "{{ return_string if not verbose else verbose_string }}"
-thumb https://i.imgur.com/IJrNLPU.png
-image " {{'https://i.imgur.com/sCRePls.png' if verbose else '' }}"
-footer "{{ footer }}"